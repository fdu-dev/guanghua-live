<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.edu.fudan.live.bean.Comment" table="comment">
		<id name="cid" type="java.lang.Integer">
			<column name="cid" />
			<generator class="increment" />
		</id>
		<property name="vid" type="java.lang.Integer">
			<column name="vid"  />
		</property>
		<property name="uid" type="java.lang.Integer">
			<column name="uid"  />
		</property>
		<property name="time" type="java.util.Date">
			<column name="time"  />
		</property>
		<property name="commentedId" type="java.lang.Integer">
			<column name="commented_id" />
		</property>
		<property name="message" type="java.lang.String">
			<column name="message"  />
		</property>
	</class>
</hibernate-mapping>
